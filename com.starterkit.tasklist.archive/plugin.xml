<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Archive Category"
            id="com.starterkit.tasklist.archive">
      </category>
      <view
            name="Archive View"
            icon="icons/sample.gif"
            category="com.starterkit.tasklist.archive"
            class="com.starterkit.tasklist.archive.views.ArchiveView"
            id="com.starterkit.tasklist.archive.views.ArchiveView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.starterkit.tasklist.archive.perspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="com.starterkit.tasklist.archive.views.ArchiveView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.starterkit.tasklist.archive.PerspectiveFactory"
            id="com.starterkit.tasklist.archive.perspective"
            name="Archive">
      </perspective>
   </extension>

</plugin>
